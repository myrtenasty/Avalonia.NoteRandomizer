<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.NoteRandomizer.App"
             xmlns:local="using:Avalonia.NoteRandomizer"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Resources>
        <FontFamily x:Key="SourceHanSansRegular">avares://Avalonia.NoteRandomizer/Assets/Fonts#Dream Han Sans CN</FontFamily>
    </Application.Resources>
             
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Dark" PrimaryColor="Purple" SecondaryColor="Lime" />
        <StyleInclude Source="Styles/MainStyle.axaml"/>
    </Application.Styles>
</Application>